# Environment Variables for Tic-Tac-Toe Application
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=tictactoe
POSTGRES_USER=tictactoe_user
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://tictactoe_user:change_this_password_in_production@database:5432/tictactoe

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-secret-key-change-in-production-with-a-long-random-string

# Application Settings
ENVIRONMENT=production
DEBUG=false

# CORS Settings
CORS_ORIGINS=["http://localhost"]

# Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
